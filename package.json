{
  "name": "zed-vision-mono",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:zed-vision/zed-vision-site.git",
  "author": "Zoltan Erdos <zolika84@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "docker-compose down && yarn docker ___build",
    "start": "docker-compose down && yarn old-start & yarn docker ___start",
    "old-start": "cd packages/gatsby && yarn start",
    "serve": "file_server --cert .certs/localhost.cert --key .certs/localhost.key --host 0.0.0.0 public",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml}\"",
    "lint": "eslint ./packages --ext .ts --ext .tsx --ext .js --fix",
    "xxx-postinstall": "sh ./scripts/debts.sh",
    "docker:start": "docker-compose down && docker-compose up --detach --build gatsby",
    "docker-yarn": "docker-compose exec gatsby yarn",
    "docker": "(yarn docker-yarn || (yarn docker:start && yarn docker-yarn)) && yarn docker-yarn",
    "___build": "rm -rf public .certs && mv /tmp/app/.certs /tmp/app/public /app/ && yarn xxx-postinstall",
    "___start": "yarn ___build && yarn serve"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/plugin-syntax-jsx": "7.10.4",
    "@types/mdx-js__react": "1.5.2",
    "@types/react-dom": "16.9.8",
    "@types/react-helmet": "6.1.0",
    "@types/styled-components": "5.1.3",
    "@types/typography": "0.16.3",
    "@types/webtorrent": "0.107.2",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "babel-loader": "8.1.0",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "prettier": "2.1.1",
    "styled-components": "5.2.0",
    "ts-loader": "8.0.3",
    "typescript": "4.0.2"
  }
}
